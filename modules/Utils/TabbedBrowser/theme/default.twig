<div>
    <ul class="nav nav-tabs">
        {% for tab in captions %}
            <li role="presentation" {% if tab.selected %}class="active"{% endif %}>
                <a id="{{ id }}" {{ tab.parent |raw }} {{ tab.href | raw }}>{{ tab.caption }}</a>
            </li>
        {% endfor %}
    </ul>
    {{ body | raw }}
</div>